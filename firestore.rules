rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      // IMPORTANT: Replace with your actual Firebase Admin UID(s).
      let adminUids = ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      return request.auth != null && request.auth.uid in adminUids;
    }

    // Public collections: Allow anyone to read. Only admins can write.
    match /(courses|instructors|events|blogPosts)/{document=**} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // Student Progress: Users can only read/write their own data.
    match /studentProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow list: if isAdmin(); // Admins can list all progress docs
    }

    // Event Attendees: Authenticated users can create their own registration.
    // Only the registered user or an admin can read their own ticket info.
    match /events/{eventId}/attendees/{userId} {
      allow get: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
      allow list, update, delete: if isAdmin();
    }

    // Feedback: Authenticated users can create feedback. Admins can read it.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list, delete: if isAdmin();
    }
  }
}
