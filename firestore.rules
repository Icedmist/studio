rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      // IMPORTANT: Replace with your actual Firebase Admin UID(s).
      let adminUids = ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      return request.auth != null && request.auth.uid in adminUids;
    }

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all access to prevent unintentional open collections.
    match /{document=**} {
      allow read, write: if false;
    }

    // Courses: Public can read, Admins can write
    match /courses/{courseId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Instructors: Public can read, Admins can write
    match /instructors/{instructorId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Blog Posts: Public can read published posts, Admins can write all
    match /blogPosts/{postId} {
      allow get: if resource.data.status == 'published' || isAdmin();
      allow list: if true; // Public list is okay, client will filter for 'published'
      allow create, update, delete: if isAdmin();
    }
    
    // Events: Public can read, Admins can write
    match /events/{eventId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin();
      
      // Attendees: Only registered user or admin can read their ticket,
      // and only authenticated users can register themselves.
      match /attendees/{userId} {
        allow get: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow list, update, delete: if isAdmin();
      }
    }

    // Student Progress: Users can only access their own progress records.
    // Admins have read/list access.
    match /studentProgress/{userId} {
      allow get, update, create: if isOwner(userId);
      allow list: if isAdmin(); // Admins can list all users for the panel
      // Admins cannot delete user progress for safety
      allow delete: if false; 
    }

    // Feedback: Authenticated users can create feedback. Admins can read it.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list, delete: if isAdmin();
    }
  }
}
