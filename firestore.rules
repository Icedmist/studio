
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      // This UID must be replaced with the actual Firebase UID of the admin user.
      return request.auth != null && request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
    }

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Courses: Public can read, Admins can write
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Instructors: Public can read, Admins can write
    match /instructors/{instructorId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Blog Posts: Public can read published posts. Admins can write all.
    match /blogPosts/{postId} {
      allow get: if resource.data.status == 'published' || isAdmin();
      allow list: if true; // `list` allows querying the collection
      allow create, update, delete: if isAdmin();
    }
    
    // Events: Public can read. Admins can write.
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
      
      // Attendees subcollection
      match /attendees/{userId} {
        allow get: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow list, update, delete: if isAdmin();
      }
    }

    // Student Progress: Users can only access their own records. Admins have read-only list access.
    match /studentProgress/{userId} {
      allow get, create, update: if isOwner(userId);
      allow list: if isAdmin(); // Admins can list all users
      allow delete: if isAdmin();
    }

    // Feedback: Authenticated users can create feedback. Admins can manage it.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list, update, delete: if isAdmin();
    }
  }
}
