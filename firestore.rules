
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is an admin.
    // IMPORTANT: Keep this list of UIDs in sync with your app's admin configuration.
    function isAdmin() {
      return request.auth != null && request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
    }

    // Public Collections: Anyone can read, only admins can write.
    // This covers courses, instructors, blog posts, and events.
    match /{collection}/{docId} where collection in ['courses', 'instructors', 'blogPosts', 'events'] {
      allow get, list: true;
      allow write: if isAdmin();
    }
    
    // Subcollection for Event Attendees: Admins can read, users can register themselves.
    match /events/{eventId}/attendees/{userId} {
      allow get, list: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Student Progress: Users can read/write their own progress. Admins can read anyone's progress.
    match /studentProgress/{userId} {
      allow get: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow create, update: if request.auth != null && request.auth.uid == userId;
      // No delete access for safety.
    }
    
    // Feedback: Authenticated users can create feedback. Admins can read all feedback.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list: if isAdmin();
    }
  }
}
