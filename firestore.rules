
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      // List of admin UIDs.
      // IMPORTANT: Replace with your actual Firebase Admin UID(s).
      let adminUids = ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      return request.auth != null && request.auth.uid in adminUids;
    }

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all access to prevent unintentional open collections.
    match /{path=**}/documents/{document} {
      allow read, write: if false;
    }

    // --- PUBLIC READ-ONLY COLLECTIONS ---
    // Courses, Instructors, Events, Blog Posts are public.
    match /(courses|instructors|events|blogPosts)/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // --- USER-SPECIFIC COLLECTIONS ---

    // Student Progress: Users can only access their own progress records. Admins can view all.
    match /studentProgress/{userId} {
      allow read, create, update: if isOwner(userId) || isAdmin();
      allow list, delete: if isAdmin();
    }
    
    // Feedback: Authenticated users can create feedback. Admins can read it.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list, delete: if isAdmin();
    }
    
    // Event Attendees Subcollection
    match /events/{eventId}/attendees/{userId} {
       allow get: if isOwner(userId) || isAdmin();
       allow create: if isOwner(userId);
       allow list, delete, update: if isAdmin();
    }
  }
}
