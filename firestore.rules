
rules_version = '2';

// Helper function to check if a user is an admin.
// IMPORTANT: You must update the UIDs in '/src/lib/admin.ts' as well.
function isAdmin() {
  return request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
}

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Public Content: Courses, Instructors, Blog Posts, Events
    // Anyone can read this content. Only admins can create, update, or delete it.
    match /(courses|instructors|blogPosts|events)/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Event Attendees Subcollection
    // Authenticated users can register for an event (create their own attendee doc).
    // They can also read their own registration status.
    // Admins can read/write all attendee data.
    match /events/{eventId}/attendees/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
      allow update, delete: if isAdmin();
    }
    
    // Student Progress
    // Users can only read and write to their own progress document.
    // Admins have full access.
    match /studentProgress/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // Feedback
    // Any authenticated user can create feedback.
    // Only admins can read or delete feedback.
    match /feedback/{feedbackId} {
      allow read, delete: if isAdmin();
      allow create: if request.auth != null;
    }
  }
}
