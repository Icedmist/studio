
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an administrator.
    // Ensure your UID is in this list in src/lib/admin.ts and that it matches here.
    function isAdmin() {
      return request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
    }

    // Rules for publicly readable collections like courses, instructors, etc.
    match /courses/{courseId} {
      // Anyone can read a single course or the entire collection.
      allow read: if true;
      // Only admins can write (create, update, delete).
      allow write: if isAdmin();
    }
    
    match /instructors/{instructorId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Rules for event attendees.
    match /events/{eventId}/attendees/{userId} {
        // Only admins can read the list of attendees.
        allow read: if isAdmin();
        // An authenticated user can register themselves for an event.
        allow create: if request.auth.uid == userId;
    }

    // Users can manage their own progress document.
    match /studentProgress/{userId} {
      allow read, update, delete: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
    }
    
    // Anyone can submit feedback. Only admins can read it.
    match /feedback/{feedbackId} {
      allow read: if isAdmin();
      allow create: if true;
    }
  }
}
