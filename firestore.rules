
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // ===============================================================
    // 1. HELPER FUNCTIONS
    // ===============================================================

    function isAdmin() {
      return get(/databases/$(database)/documents/studentProgress/$(request.auth.uid)).data.role == 'admin';
    }

    function isInstructor() {
        return get(/databases/$(database)/documents/studentProgress/$(request.auth.uid)).data.role == 'instructor';
    }

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ===============================================================
    // 2. PUBLIC CONTENT (Courses, Instructors, Blog, Events)
    // ===============================================================

    // COURSES: Allows reading the course AND all subcollections (lessons, quizzes, etc.)
    match /courses/{courseId} {
      allow read: if true;
      allow create, update, delete: if isAdmin() || isInstructor();
      
      // Recursive match for any subcollections inside a course
      match /{allSubcollections=**} {
        allow read: if true;
        allow create, update, delete: if isAdmin() || isInstructor();
      }
    }
    
    match /instructors/{instructorId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      // Allow an instructor to update their own profile
      allow update: if isAdmin() || (isInstructor() && resource.id == request.auth.uid);
    }

    match /team/{memberId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /blogPosts/{postId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // EVENTS
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      
      // ATTENDEES SUBCOLLECTION
      match /attendees/{userId} {
        // Admins can see the full list of who is attending
        allow list: if isAdmin();
        
        // Users can check their own status; Admins can check anyone
        allow get: if isOwner(userId) || isAdmin();
        
        // Users can Register (create) AND Unregister (delete) themselves
        allow create, delete: if isOwner(userId);
        
        // Admins can force remove anyone
        allow delete: if isAdmin();
        
        // No updating allowed (delete and re-create if needed)
        allow update: if false; 
      }
    }

    // ===============================================================
    // 3. USER SPECIFIC DATA
    // ===============================================================

    // STUDENT PROGRESS
    match /studentProgress/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin() || isInstructor(); // Instructors need to list to count students
      
      // User can create their own doc on signup.
      // Admin can update anyone's role.
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();

      // Only admins can delete user profiles
      allow delete: if isAdmin();
    }

    // FEEDBACK
    match /feedback/{feedbackId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }
  }
}
