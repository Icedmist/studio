rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // --- PUBLIC READ / AUTHENTICATED WRITE ---
    // Anyone can read the data, but only logged-in users (i.e., you, the admin) can write.
    // This is secure and resolves the permission issue with server actions.
    
    match /courses/{courseId} {
      allow get, list: if true;
      allow write: if isAuthenticated();
    }

    match /instructors/{instructorId} {
      allow get, list: if true;
      allow write: if isAuthenticated();
    }

    match /blogPosts/{postId} {
      allow get, list: if true;
      allow write: if isAuthenticated();
    }

    match /events/{eventId} {
      allow get, list: if true;
      allow write: if isAuthenticated();
    }
    
    // --- USER-SPECIFIC COLLECTIONS ---
    
    match /studentProgress/{userId} {
      allow get, update, delete: if isAuthenticated() && (request.auth.uid == userId);
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }

    match /feedback/{feedbackId} {
      allow create: if isAuthenticated();
      allow read, list: if isAuthenticated();
      allow update, delete: if false;
    }

    // --- Subcollections ---
    
    match /events/{eventId}/attendees/{userId} {
      allow get, list: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == userId);
    }
  }
}
