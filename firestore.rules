
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is an authenticated admin
    function isAdmin() {
      // IMPORTANT: Update this list with your actual Firebase Admin UIDs
      // You can find a user's UID in the Firebase Console > Authentication > Users tab.
      let adminUIDs = ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      return request.auth != null && request.auth.uid in adminUIDs;
    }

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ===============================================================
    // Public Content Collections (Courses, Instructors, Blog, Events)
    // ===============================================================

    // Anyone can read public content.
    // Only admins can create, update, or delete public content.
    match /courses/{courseId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /instructors/{instructorId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /blogPosts/{postId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      
      // Rules for the attendees subcollection of an event
      match /attendees/{userId} {
        // Only admins can read the full list of attendees
        allow list: if isAdmin();
        // A user can check if they are registered (read their own document)
        // Admins can also read individual attendee documents
        allow get: if isOwner(userId) || isAdmin();
        // An authenticated user can register themselves for an event.
        // They cannot update or delete their registration through this rule.
        allow create: if isOwner(userId);
        // Only admins can remove attendees
        allow delete: if isAdmin();
        allow update: if false; // No updates allowed for now
      }
    }

    // ===============================================================
    // User-Specific Collections (Student Progress, Feedback)
    // ===============================================================

    // A student can only read and write to their own progress document.
    match /studentProgress/{userId} {
      // Allow get/list for admins to view user data in the admin panel
      allow get, list: if isAdmin();
      // Allow users to read and write their own progress
      allow read, write: if isOwner(userId);
    }

    // Feedback can be created by any authenticated user.
    // Only admins can read the feedback.
    match /feedback/{feedbackId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }
  }
}
