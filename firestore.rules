
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role by UID
    function isAdmin() {
      // IMPORTANT: Replace with your actual Firebase Admin UID.
      return request.auth != null && request.auth.uid == 'dqrHnJtM27bMpNudHxO5hL3wsNE3';
    }

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Courses: Public can read, Admins can write
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Instructors: Public can read, Admins can write
    match /instructors/{instructorId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Blog Posts: Public can read published posts, Admins can write all
    match /blogPosts/{postId} {
      allow get: if resource.data.status == 'published' || isAdmin();
      allow list: if true; // Public list is okay, client will filter
      allow create, update, delete: if isAdmin();
    }
    
    // Events: Public can read, Admins can write
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
      
      // Attendees subcollection
      match /attendees/{userId} {
        allow get: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow list, update, delete: if isAdmin();
      }
    }

    // Student Progress: Users can only access their own progress.
    // Admins can view all progress for management purposes.
    match /studentProgress/{userId} {
      allow get, create, update: if isOwner(userId);
      allow list, delete: if isAdmin(); 
    }

    // Feedback: Any authenticated user can submit. Only admins can read.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list, delete: if isAdmin();
    }
  }
}
