
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has an admin role.
    function isAdmin() {
      // IMPORTANT: Add your Firebase Admin UID(s) here.
      let adminUids = ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      return request.auth != null && request.auth.uid in adminUids;
    }

    // Helper function to check if a user is the owner of a document.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Default deny all access to prevent any collection from being left open.
    match /{document=**} {
      allow read, write: if false;
    }

    // Courses: Public can read, Admins can write.
    match /courses/{courseId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // Instructors: Public can read, Admins can write.
    match /instructors/{instructorId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // Blog Posts: Public can read published posts. Admins can write all posts.
    match /blogPosts/{postId} {
      allow get: if resource.data.status == 'published' || isAdmin();
      allow list: if true; // The client will filter for 'published' status on public pages.
      allow write: if isAdmin();
    }

    // Events: Public can read. Admins can write.
    match /events/{eventId} {
      allow get, list: if true;
      allow write: if isAdmin();

      // Attendees: Only the registered user or an admin can view a ticket.
      // Only authenticated users can register themselves. Admins can manage the list.
      match /attendees/{userId} {
        allow get: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow list, update, delete: if isAdmin();
      }
    }

    // Student Progress: Users can only read/write their own progress. Admins can read all.
    match /studentProgress/{userId} {
      allow get, update, create: if isOwner(userId);
      allow list: if isAdmin();
      allow delete: if isAdmin();
    }

    // Feedback: Authenticated users can create feedback. Admins can read it.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list, delete: if isAdmin();
    }
  }
}
