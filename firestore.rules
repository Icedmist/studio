rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      // The list of admin UIDs must be stored directly in the rules
      // or in a separate document that admins can read.
      // For simplicity here, we list them.
      // IMPORTANT: Replace with your actual Firebase Admin UID.
      let admin_uids = ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      return request.auth.uid in admin_uids;
    }

    // Public collections: Anyone can read, only admins can write.
    match /courses/{courseId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /instructors/{instructorId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /blogPosts/{postId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /events/{eventId} {
      allow get, list: if true;
      allow write: if isAdmin();

      // Attendees can be registered by authenticated users
      // Admins can read the list of attendees
      match /attendees/{userId} {
        allow read: if isAdmin() || request.auth.uid == userId;
        allow create: if request.auth.uid == userId;
        allow write: if isAdmin();
      }
    }

    // User-specific data
    match /studentProgress/{userId} {
      // Allow user to read/write their own progress.
      // Allow admin to read any user's progress.
      allow read, update: if request.auth.uid == userId || isAdmin();
      // Allow a user to create their own progress document upon signup.
      allow create: if request.auth.uid == userId;
    }

    match /feedback/{feedbackId} {
      // Allow authenticated users to submit feedback
      allow create: if request.auth != null;
      // Only admins can read the feedback
      allow read, list, delete: if isAdmin();
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}