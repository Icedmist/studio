rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the logged-in user's UID is in our admin list.
    // This is the correct way to handle admin permissions in security rules
    // when not using custom claims.
    function isAdmin() {
      // This list MUST be kept in sync with the one in /src/lib/admin.ts
      return request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
    }

    // --- PUBLIC-READ, ADMIN-WRITE COLLECTIONS ---
    
    match /courses/{courseId} {
      // Anyone can read courses.
      allow get, list: if true;
      // Only authenticated admins can write (create, update, delete).
      allow write: if request.auth != null && isAdmin();
    }

    match /instructors/{instructorId} {
      allow get, list: if true;
      allow write: if request.auth != null && isAdmin();
    }

    match /blogPosts/{postId} {
      allow get, list: if true;
      allow write: if request.auth != null && isAdmin();
    }

    match /events/{eventId} {
      allow get, list: if true;
      allow write: if request.auth != null && isAdmin();
    }
    
    // --- USER-SPECIFIC COLLECTIONS ---
    
    match /studentProgress/{userId} {
      allow get, update, delete: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow list: if request.auth != null && isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list: if request.auth != null && isAdmin();
      allow update, delete: if false;
    }

    // --- Subcollections ---
    
    match /events/{eventId}/attendees/{userId} {
      allow get: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow list: if request.auth != null && isAdmin();
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
  }
}
