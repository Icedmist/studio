rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // ===============================================================
    // 1. HELPER FUNCTIONS
    // ===============================================================

    function isAdmin() {
      // IMPORTANT: Keep this map in sync with your src/lib/admin.ts
      let adminUIDs = {
        'dqrHnJtM27bMpNudHxO5hL3wsNE3': true
      };
      return request.auth != null && request.auth.uid in adminUIDs;
    }

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ===============================================================
    // 2. PUBLIC CONTENT (Courses, Instructors, Blog, Events)
    // ===============================================================

    // COURSES: Allows reading the course AND all subcollections (lessons, quizzes, etc.)
    match /courses/{courseId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      
      // Recursive match for any subcollections inside a course
      match /{allSubcollections=**} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
      }
    }
    
    match /instructors/{instructorId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /blogPosts/{postId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // EVENTS
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      
      // ATTENDEES SUBCOLLECTION
      match /attendees/{userId} {
        // Admins can see the full list of who is attending
        allow list: if isAdmin();
        
        // Users can check their own status; Admins can check anyone
        allow get: if isOwner(userId) || isAdmin();
        
        // Users can Register (create) AND Unregister (delete) themselves
        allow create, delete: if isOwner(userId);
        
        // Admins can force remove anyone
        allow delete: if isAdmin();
        
        // No updating allowed (delete and re-create if needed)
        allow update: if false; 
      }
    }

    // ===============================================================
    // 3. USER SPECIFIC DATA
    // ===============================================================

    // STUDENT PROGRESS
    // Frontend usage: db.collection('studentProgress').doc(user.uid).set(data)
    match /studentProgress/{userId} {
      allow get, list: if isAdmin();
      allow read, write: if isOwner(userId);
    }

    // FEEDBACK
    match /feedback/{feedbackId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }
  }
}
