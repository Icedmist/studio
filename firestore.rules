
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin.
    // UIDs must be hardcoded here.
    function isAdmin() {
      return request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
    }

    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Public content: readable by anyone, writable only by admin.
    match /instructors/{instructorId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();

      // Rules for the attendees subcollection
      match /attendees/{userId} {
        allow read: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow update, delete: if isAdmin();
      }
    }
    
    // User-specific data: readable and writable only by the user themselves or an admin.
    match /studentProgress/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Only admin can list all user progress docs
      allow create, update: if isOwner(userId) || isAdmin();
    }
    
    match /feedback/{feedbackId} {
      // Allow authenticated users to create feedback.
      // Only admins can read the feedback.
      allow create: if request.auth != null;
      allow read, list, update, delete: if isAdmin();
    }

    // Course data is now static in the code, so no rules are needed for the 'courses' collection.
    // If you were to revert to using Firestore for courses, the rule would be:
    // match /courses/{courseId} {
    //   allow read: if true;
    //   allow write: if isAdmin();
    // }
  }
}
