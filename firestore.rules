rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      // List of admin UIDs.
      // IMPORTANT: Replace with your actual Firebase Admin UID(s).
      let adminUids = ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      return request.auth != null && request.auth.uid in adminUids;
    }

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all access to prevent unintentional open collections.
    match /{document=**} {
      allow read, write: if false;
    }

    // Courses: Public can read, Admins can write
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Instructors: Public can read, Admins can write
    match /instructors/{instructorId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Blog Posts: Public can read published posts, Admins can write all
    match /blogPosts/{postId} {
      allow get: if resource.data.status == 'published' || isAdmin();
      allow list: if true; // Client will filter for 'published' status
      allow create, update, delete: if isAdmin();
    }
    
    // Events: Public can read, Admins can write
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
      
      // Attendees subcollection
      match /attendees/{userId} {
        allow get: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow list, update, delete: if isAdmin();
      }
    }

    // Student Progress: Users can only access their own records. Admins have read-only list access.
    match /studentProgress/{userId} {
      allow get, update: if isOwner(userId);
      allow create: if request.auth != null; // Any authenticated user can create their own profile
      allow list: if isAdmin(); // Admins can list all users for the user management page
      allow delete: if isAdmin();
    }

    // Feedback: Authenticated users can create. Admins can read.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list, delete: if isAdmin();
    }
  }
}
