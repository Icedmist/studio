rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function isAuthOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuth() && request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
    }

    // Public content: Courses, Events, Blog Posts, Instructors
    // Anyone can read this data.
    match /{collectionName}/{docId} where collectionName in ['courses', 'events', 'blogPosts', 'instructors'] {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User-specific data: Student Progress
    // A user can read and write to their OWN progress document.
    // Admins can read anyone's progress for the admin panel.
    match /studentProgress/{userId} {
      allow read: if isAuthOwner(userId) || isAdmin();
      allow write: if isAuthOwner(userId);
    }
    
    // Feedback: Logged-in users can create feedback. Admins can read all feedback.
    match /feedback/{feedbackId} {
      allow read: if isAdmin();
      allow create: if isAuth();
    }

    // Event Attendees: A subcollection
    // Logged-in users can register themselves (create).
    // Admins can view the attendee list (read).
    match /events/{eventId}/attendees/{userId} {
        allow read: if isAuthOwner(userId) || isAdmin();
        allow create: if isAuthOwner(userId);
        allow write, delete: if isAdmin();
    }
  }
}
