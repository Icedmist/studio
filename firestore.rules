
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for Admin UID
    function isAdmin() {
      // Your admin UID is hardcoded here for security.
      // Rules cannot read your application source code.
      return request.auth.uid == 'dqrHnJtM27bMpNudHxO5hL3wsNE3';
    }

    // Public Collections: Anyone can read, only admins can write.
    match /courses/{courseId} {
      allow read;
      allow write: if isAdmin();
    }

    match /instructors/{instructorId} {
      allow read;
      allow write: if isAdmin();
    }
    
    match /blogPosts/{postId} {
      allow read;
      allow write: if isAdmin();
    }

    match /events/{eventId} {
      allow read;
      allow write: if isAdmin();
    }
    
    // Event Attendees Subcollection
    match /events/{eventId}/attendees/{userId} {
      // Allow authenticated users to register themselves
      allow create: if request.auth.uid == userId;
      // Allow admins to read the attendee list
      allow read: if isAdmin();
      // Only admins can delete registrations
      allow delete: if isAdmin();
    }

    // User-Specific Collections
    match /studentProgress/{userId} {
      // A user can read their own progress. Admins can read anyone's progress.
      allow read: if request.auth.uid == userId || isAdmin();
      // A user can create their own progress doc.
      allow create: if request.auth.uid == userId;
      // A user can update their own progress doc. Admins can update anyone's.
      allow update: if request.auth.uid == userId || isAdmin();
    }

    match /feedback/{feedbackId} {
      // Anyone can submit feedback.
      allow create;
      // Only admins can read or delete feedback.
      allow read, delete: if isAdmin();
    }
  }
}
