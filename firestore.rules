rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      // The admin UID is hardcoded here for security.
      // This UID corresponds to the one in src/lib/admin.ts
      return request.auth.uid == 'dqrHnJtM27bMpNudHxO5hL3wsNE3';
    }

    // Public Collections:
    // Allow anyone to read (get, list) these collections.
    // Allow only admins to write (create, update, delete).
    match /{collection}/{docId} where collection in ['courses', 'instructors', 'blogPosts', 'events'] {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    // Feedback Collection:
    // Allow anyone to create feedback.
    // Allow only admins to read or delete feedback.
    match /feedback/{feedbackId} {
        allow create: if true;
        allow read, delete: if isAdmin();
        allow update: if false;
    }

    // Student Progress Collection:
    // Users can only read and write their own progress document.
    // Admins can read any user's progress for the dashboard.
    match /studentProgress/{userId} {
      allow get: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
      allow create, update: if request.auth.uid == userId;
      allow delete: if isAdmin();
    }
    
    // Event Attendees Subcollection:
    // Allow authenticated users to create their own registration record.
    // Allow only admins to list all attendees.
    match /events/{eventId}/attendees/{userId} {
        allow create: if request.auth.uid == userId;
        allow read, list: if request.auth.uid == userId || isAdmin();
        allow write: if isAdmin();
    }
  }
}