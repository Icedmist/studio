rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- PUBLIC-READ, ADMIN-WRITE COLLECTIONS ---
    
    match /courses/{courseId} {
      // Anyone can read courses.
      allow get, list: if true;
      // Only an authenticated user whose UID is in the hardcoded list can write.
      // This list MUST be kept in sync with the one in /src/lib/admin.ts
      allow write: if request.auth != null && request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
    }

    match /instructors/{instructorId} {
      allow get, list: if true;
      allow write: if request.auth != null && request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
    }

    match /blogPosts/{postId} {
      allow get, list: if true;
      allow write: if request.auth != null && request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
    }

    match /events/{eventId} {
      allow get, list: if true;
      allow write: if request.auth != null && request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
    }
    
    // --- USER-SPECIFIC COLLECTIONS ---
    
    match /studentProgress/{userId} {
      allow get, update, delete: if request.auth != null && (request.auth.uid == userId || request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3']);
      allow list: if request.auth != null && request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list: if request.auth != null && request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      allow update, delete: if false;
    }

    // --- Subcollections ---
    
    match /events/{eventId}/attendees/{userId} {
      allow get: if request.auth != null && (request.auth.uid == userId || request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3']);
      allow list: if request.auth != null && request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.uid in ['dqrHnJtM27bMpNudHxO5hL3wsNE3']);
    }
  }
}
