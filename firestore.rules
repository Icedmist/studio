
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an Admin
    function isAdmin() {
      // List of admin UIDs - This must be kept in sync with src/lib/admin.ts
      let adminUIDs = ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      return request.auth != null && request.auth.uid in adminUIDs;
    }

    // Default deny all access to prevent unintentional open collections
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Public collections: anyone can read, only admins can write
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /instructors/{instructorId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Student progress data: only the user themselves or an admin can access
    match /studentProgress/{userId} {
      allow get, update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow admins to list all student progress documents
      allow list: if isAdmin();
    }
    
    // Feedback data: authenticated users can create, only admins can read
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list, delete: if isAdmin();
    }
    
    // Event attendees: Authenticated users can register themselves. Admins can read the list.
    match /events/{eventId}/attendees/{userId} {
      allow get: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == userId;
      allow list: if isAdmin();
    }
  }
}
