
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role by UID
    function isAdmin() {
      // IMPORTANT: Replace with your actual Firebase Admin UID(s).
      // You can find your UID in the Firebase Console under Authentication > Users.
      let adminUids = ['dqrHnJtM27bMpNudHxO5hL3wsNE3'];
      return request.auth != null && request.auth.uid in adminUids;
    }

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- Public Collections: Allow public read, admin write ---

    // Courses: Public can read, Admins can write
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Instructors: Public can read, Admins can write
    match /instructors/{instructorId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Blog Posts: Public can read published posts, Admins can write all
    match /blogPosts/{postId} {
      allow get, list: if true; // Public list is okay, client will filter for 'published'
      allow create, update, delete: if isAdmin();
    }
    
    // Events: Public can read, Admins can write
    match /events/{eventId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
      
      // Attendees sub-collection
      match /attendees/{userId} {
        allow get: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow list, update, delete: if isAdmin();
      }
    }

    // --- User-Specific Collections: Secure access ---

    // Student Progress: Users can only access their own progress records.
    match /studentProgress/{userId} {
      allow get, create, update: if isOwner(userId);
      // Admins can list all users and perform any action.
      allow read, write: if isAdmin();
    }

    // Feedback: Authenticated users can create feedback. Admins can read/delete it.
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list, delete: if isAdmin();
    }

    // --- Default deny all other access ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
